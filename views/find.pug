doctype html
html
	head
		title Team Availability Scheduler
		link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Montserrat:300,700')
		link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css' integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm' crossorigin='anonymous')
		style 
			include index.css
	body 
		.container 
			.textblock
				h1 REAL SKILLS EDUCATION
				h3.
					Find a time when  #[br]
					people are free. 
				h6.
					Select at least one member below then procede to the next step. 
				.option-select
					form.option-row(action='/find', method="GET", name='select-members')
					each val in members 
						button.btn.choose-member #{val.name} 
							input.check-input(type='checkbox', name=val.name, checked='checked', value='off')
						br
					input.btn.btn-outline-success(type='submit', value='Procede to next step')
				.option-select 
					form.option-row(action='/')
							input.btn.btn-outline-warning(type='submit' value='Go to Home')
		// Jquery Script for Bootstrap
		script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js")
		// Boostrap javascript 
		script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous")
		// Table click javascript
		script
			include button.js