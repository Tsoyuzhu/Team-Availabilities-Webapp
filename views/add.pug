doctype html
html
	head
		title Add Team Member
		link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Montserrat:300,700')
		link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css' integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm' crossorigin='anonymous')
		style 
			include index.css
			include add.css
			include table.css
			include addstep1-mixin.pug 
			include addstep2-mixin.pug
			include rowElementCreate-mixin.pug
	body 
		h1.textblock Add a Member to the System
		.container
			form(action='/add/submit', method='POST', id='availform')
				+addstep1() 
				+addstep2()
			.option-select
				form.option-row(action='/' id='homebutton')
					input.btn.btn-outline-dark(type='submit' value='Go to Home' form='homebutton')

		// Jquery Script for Bootstrap
		script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js")
		// Boostrap javascript 
		script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous")
		// Table click javascript
		script
			include table.js
			include add.js
			include enteredinput.js