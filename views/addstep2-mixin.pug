mixin addstep2()
	.addstep2
		.textblock
			h3.
				Step 2 #[br]
			.center-instructions
				h4.
					- Click the timeslot to cycle through the colours.#[br]
					- Black means available face-to-face and online.#[br]
					- Yellow means available online only. 
		.option-select
			.row
				.col-md-12
					table.table.table-bordered.unselectable
						thead
							tr
								th(scope='col')
								th(scope='col') Mon
								th(scope='col') Tue
								th(scope='col') Wed
								th(scope='col') Thu
								th(scope='col') Fri
								th(scope='col') Sat
								th(scope='col') Sun
						tbody 
							tr
								th(scope='row') 8:00 am 
								+rowElementCreate('8') 
							tr
								th(scope='row') 9:00 am
								+rowElementCreate('9') 
							tr
								th(scope='row') 10:00 am
								+rowElementCreate('10')
							tr
								th(scope='row') 11:00 am
								+rowElementCreate('11')
							tr
								th(scope='row') 12:00 pm
								+rowElementCreate('12')
							tr
								th(scope='row') 1:00 pm
								+rowElementCreate('13')
							tr
								th(scope='row') 2:00 pm
								+rowElementCreate('14')
							tr
								th(scope='row') 3:00 pm
								+rowElementCreate('15')
							tr
								th(scope='row') 4:00 pm
								+rowElementCreate('16')
							tr
								th(scope='row') 5:00 pm
								+rowElementCreate('17')
							tr
								th(scope='row') 6:00 pm
								+rowElementCreate('18')
							tr
								th(scope='row') 7:00 pm
								+rowElementCreate('19')          
							tr
								th(scope='row') 8:00 pm
								+rowElementCreate('20') 
							tr
								th(scope='row') 9:00 pm
								+rowElementCreate('21') 
							tr
								th(scope='row') 10:00 pm 
								+rowElementCreate('22') 
							tr
								th(scope='row') 11:00 pm
								+rowElementCreate('23') 
			.option-select
				button.btn.btn-outline-danger.step2bck(type="button") Back to step 1
				button.btn.btn-outline-success.step2fwd(type="submit") Submit Availabilities
				.warning You did not enter a valid name. 
